{
  "compilerOptions": {
    /** Hardhat specific */
    // "module": "commonjs",
    "rootDirs": ["arch/test"],
    
    /** All including Nextjs*/
    "forceConsistentCasingInFileNames": true,
    "target": "es5",
    
    /** Nextjs specific*/
    //  "target": "es2020",
    "lib": ["dom", "dom.iterable", "es6"],
    "moduleResolution": "bundler",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "./typechain", "arch/test", "./deploy", "./types"],
  "exclude": ["node_modules"],
  "files": ["./hardhat.config.ts"]
}
